jQuery(function ($) {

  'use strict';

  let $filtersSelector = $('.isotop-list li');

  // filters click
  $('.isotop-list li').on('click', function () {
    $(this).addClass('active').siblings().removeClass('active');
  });

  $($(this).attr('data-filter')).isotope({
    itemSelector: $filtersSelector,
    layoutMode: 'fitRows'
  });


  // setTimeout(function () {
  //   $filtersSelector.first().trigger("click")
  // }, 100);

  $filtersSelector.on('click', function () {
    $('.isotop-row').isotope({
      filter: $(this).attr('data-filter')
    });
  });

});